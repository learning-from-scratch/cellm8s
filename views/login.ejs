<%- include('layout', { hideNav: true, bodyClass: 'login-page' , mainClass: 'container-fluid p-0' , body: ` <div
   class="login-hero d-flex align-items-stretch">
   <div class="login-media d-none d-lg-flex flex-column justify-content-end p-5 text-white">
      <div class="mb-auto">
         <h1 class="display-5 fw-bold">Find your forever friend</h1>
         <p class="lead opacity-75">Adopt, don't shop. We connect loving people with pets in need.</p>
      </div>
      <div class="small opacity-75">Trusted by shelters nationwide</div>
   </div>
   <div class="login-form-wrapper d-flex align-items-center justify-content-center p-3 p-sm-5 w-100">
      <div class="card shadow-lg border-0" style="max-width: 460px; width: 100%">
         <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
               <div class="brand-logo mb-2"></div>
               <h2 class="h4 mb-1">Welcome back</h2>
               <p class="text-muted mb-0">Sign in to continue your adoption journey</p>
            </div>
            ${error ? `<div class=\"alert alert-danger\" role=\"alert\">${error}</div>` : ``}
            <form method="post" action="/login" novalidate>
               <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input id="username" name="username" class="form-control" placeholder="e.g. jane_doe" required />
               </div>
               <div class="mb-2">
                  <label for="password" class="form-label">Password</label>
                  <input id="password" name="password" type="password" class="form-control" placeholder="••••••••"
                     required />
               </div>
               <div class="d-flex justify-content-between align-items-center mb-4">
                  <div class="form-check">
                     <input class="form-check-input" type="checkbox" value="1" id="remember">
                     <label class="form-check-label" for="remember">Remember me</label>
                  </div>
                  <a class="small" href="#">Forgot password?</a>
               </div>
               <div class="d-grid">
                  <button class="btn btn-brand btn-lg" type="submit">Sign in</button>
               </div>
            </form>
         </div>
      </div>
   </div>
   </div>
   `
   }) %>
