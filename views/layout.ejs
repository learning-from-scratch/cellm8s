<!DOCTYPE html>
<html>

<head>
   <meta charset="utf-8" />
   <title>Pet Adopt</title>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
   <link rel="stylesheet" href="/styles.css" />
</head>

<body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : '' %>">
   <% if (typeof hideNav==='undefined' || !hideNav) { %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-brand mb-4">
         <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/dashboard">
               <span class="brand-logo me-2"></span> Pet Adopt
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsMain"
               aria-controls="navbarsMain" aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarsMain">
               <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
                  <li class="nav-item"><a class="nav-link" href="/pets">Pets</a></li>
                  <li class="nav-item"><a class="nav-link" href="/adopters">Adopters</a></li>
               </ul>
               <form class="d-flex" action="/logout" method="post">
                  <button class="btn btn-light" type="submit">Logout</button>
               </form>
            </div>
         </div>
      </nav>
      <% } %>
         <main class="<%= typeof mainClass !== 'undefined' ? mainClass : 'container' %>"><%- body %></main>
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>
